{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "status",
    "meta"
  ],
  "properties": {
    "status": {
      "enum": [
        "ok",
        "error"
      ]
    },
    "data": {
      "type": [
        "object",
        "null"
      ]
    },
    "error": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "code": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "object"
        }
      }
    },
    "meta": {
      "type": "object",
      "required": [
        "ts"
      ],
      "properties": {
        "ts": {
          "type": "string"
        },
        "actor": {
          "type": "string"
        },
        "world_id": {
          "type": "string"
        },
        "cid": {
          "type": "string"
        }
      }
    }
  }
}